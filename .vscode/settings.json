{
  "eslint.workingDirectories": [
    "./app",
    "./lib",
    "./eslint-plugin",
    "./stylelint-plugin",
    "./prettier-plugin"
  ],
  "editor.tabSize": 2,
  "files.exclude": {
    "**/**/yarn.lock": true,
    "**/**/yarn-error.log": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "search.exclude": {
    "lib/src": true,
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
  ],
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "sass",
    "scss"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[graphql]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.defaultFormatter":"stylelint.vscode-stylelint",
    "editor.formatOnSave": true
  },
  "[sass]": {
    "editor.defaultFormatter":"stylelint.vscode-stylelint",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter":"stylelint.vscode-stylelint",
    "editor.formatOnSave": true
  },
  "[less]": {
    "editor.defaultFormatter":"stylelint.vscode-stylelint",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "stylelint.packageManager": "yarn",
}
